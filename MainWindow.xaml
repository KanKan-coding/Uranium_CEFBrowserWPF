<Window x:Name="Uranium" x:Class="Uranium_CEFBrowserWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        Title="Uranium" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="333*"/>
            <ColumnDefinition Width="175*"/>
        </Grid.ColumnDefinitions>
        <ToolBarTray Background="DarkGray" Height="30" Width="1024" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,0,-8,0">
            <ToolBar Name="MyToolbar" Width="1024" Height="30" >
                <Button x:Name="ApplicationClick" Background="WhiteSmoke" BorderBrush="Black" BorderThickness="1" Content="Apps" Width="60" Margin="0,0,0,1" VerticalAlignment="Bottom" Click="ApplicationClick_Click"/>
                <TextBox x:Name="Adress_Bar" Background="WhiteSmoke" BorderBrush="Black" BorderThickness="1" Text="Enter URL" TextAlignment="Center" Width="925" />
            </ToolBar>
        </ToolBarTray>


        <cefSharp:ChromiumWebBrowser x:Name="Browser" Grid.Row="0"
        Address="https://www.google.com" Margin="0,30,0,0" Grid.ColumnSpan="2" />
    </Grid>
</Window>
